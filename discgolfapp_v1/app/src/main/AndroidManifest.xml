<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.discgolfapp_v1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Discgolfapp_v1">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InventoryActivity"
            android:exported="false"
            android:label="@string/inventory_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ScoreKeeperActivity"
            android:exported="false"
            android:label="@string/score_keeper_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DiscFinderActivity"
            android:exported="false"
            android:label="@string/disc_finder_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DiscTracerActivity"
            android:exported="false"
            android:label="@string/disc_tracer_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".FormAnalyzerActivity"
            android:exported="false"
            android:label="@string/form_analyzer_name"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddDiscActivity"
            android:exported="false"
            android:label="@string/add_disc_name"
            android:parentActivityName=".InventoryActivity" />
    </application>

</manifest>