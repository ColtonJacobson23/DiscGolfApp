<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/inventory_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:onClick="startInventoryActivity"
        android:text="@string/inventory_name"
        app:layout_constraintBottom_toTopOf="@+id/practice_range_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/practice_range_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:fontFamily="sans-serif-medium"
        android:onClick="startPracticeRangeActivity"
        android:text="@string/practice_range_name"
        app:layout_constraintBottom_toTopOf="@+id/disc_finder_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inventory_button" />

    <Button
        android:id="@+id/disc_finder_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:onClick="startDiscFinderActivity"
        android:text="@string/disc_finder_name"
        app:layout_constraintBottom_toTopOf="@+id/disc_tracer_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/practice_range_button" />

    <Button
        android:id="@+id/disc_tracer_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:onClick="startDiscTracerActivity"
        android:text="@string/disc_tracer_name"
        app:layout_constraintBottom_toTopOf="@+id/form_analyzer_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disc_finder_button" />

    <Button
        android:id="@+id/form_analyzer_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:onClick="startFormAnalyzerActivity"
        android:text="@string/form_analyzer_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/disc_tracer_button" />

</androidx.constraintlayout.widget.ConstraintLayout>